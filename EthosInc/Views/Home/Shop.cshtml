
@{
    ViewData["Title"] = "Shop";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
</head>
<html>
    <div class="text-center">
        <h1 class="display-4">Shop</h1>
        <p>This is where we will list our products for sale, 
            probably using a database like in the 
            Project examples in Canvas or whatever</p>
    </div>
    @model IEnumerable<Product>
    @foreach (var p in Model)
    {
       @* To-Do: Adjust the CSS to make it look better and have multiple items in one row *@ 
        <div class="card">
        <img class="card-img-top" style="max-width: 400px;" src="ProductImages/@p.ProductID/1.png" alt="@p.Name">
            <div class="card-body">
                <div class="card-title">
                    <h3>@p.Name</h3>
                </div>
                <div class="card-text">
                    <h4>@p.Price.ToString("c")</h4>
                    <h5>@p.Description</h5>
                <a href="#!" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</html>