
@{
    ViewData["Title"] = "Shop";
}

<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
</head>
<html>
    <div class="text-center">
        <h1 class="display-4">Shop</h1>
        <p>This is where we will list our products for sale, 
            probably using a database like in the 
            Project examples in Canvas or whatever</p>
    </div>
    @model IEnumerable<Product>
    @foreach (var p in Model)
    {
        <div class="product-container">
            <div class="product-photo">
                <img src="ProductImages/@p.PictureFolder/1.png" alt="@p.Name" style="width:300px;height=:300px;">
            </div>
            <div class="product-title">
                <h3>@p.Name</h3>
            </div>
            <div class="product-price">
                <h4>@p.Price.ToString("c")</h4>
            </div>
            <div class="product-description">
                <h5>@p.Description</h5>
            </div>
        </div>
    }
</html>